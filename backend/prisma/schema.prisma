generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  name             String
  email            String       @unique
  password         String
  resetToken       String?
  resetTokenExpiry Float?
  permissions      Permission[]
}

model Permission {
  id    String @id @default(cuid())
  name  String @unique
  users User[]
}
